{
    "version": 2,
    "builds": [
      {
        "src": "admin/package.json",
        "use": "@vercel/static-build"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build"
      },
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/server.js" },
      { "src": "/admin/(.*)", "dest": "admin/index.html" },
      { "src": "/(.*)", "dest": "frontend/index.html" }
    ]
  }
  